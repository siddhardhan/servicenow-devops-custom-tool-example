{
    "swagger": "2.0",
    "info": {
        "description": "A service that provides evidence information based on control IDs.",
        "title": "Evidence Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/v1",
    "paths": {
        "/evidences": {
            "get": {
                "description": "Returns a list of evidences filtered by the provided control ID",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "evidence"
                ],
                "summary": "Get evidences by control ID",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Control ID (1234 for DataDog, 5678 for Sonar)",
                        "name": "controlId",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.Evidence"
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/main.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.ErrorResponse": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "example": "MISSING_CONTROL_ID"
                },
                "message": {
                    "type": "string",
                    "example": "Control ID is required"
                },
                "status": {
                    "type": "integer",
                    "example": 400
                }
            }
        },
        "main.Evidence": {
            "type": "object",
            "properties": {
                "appId": {
                    "type": "string",
                    "example": "A"
                },
                "controlId": {
                    "type": "string",
                    "enum": [
                        "1234",
                        "5678"
                    ],
                    "example": "1234"
                },
                "evidenceId": {
                    "type": "string",
                    "example": "sys_1a2b3c4d5e6f7890abcdef0123456789"
                },
                "evidenceStatus": {
                    "type": "string",
                    "enum": [
                        "SUCCESS",
                        "FAILED"
                    ],
                    "example": "SUCCESS"
                },
                "evidenceType": {
                    "type": "string",
                    "enum": [
                        "dataDog",
                        "sonar"
                    ],
                    "example": "dataDog"
                }
            }
        }
    }
}